		<Row Unit="UNIT_SCOUT_2" UpgradeUnit="UNIT_SKIRMISHER"/>
		<!-- 弓兵 -->
		<Row Unit="UNIT_SLINGER_2" UpgradeUnit="UNIT_ARCHER"/>
	</UnitUpgrades>
</GameInfo>